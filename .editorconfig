# https://editorconfig.org

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{html,pug,vue,jsx,tsx}]
indent_size = 2
tab_width = 2

[*.{css,scss}]
indent_size = 2
tab_width = 2

[*.{js,cjs,mjs,json,ts}]
indent_size = 2
tab_width = 2

[*.xml]
indent_size = 2
tab_width = 2

[*.conf]
indent_size = 2
tab_width = 2

[vimrc]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
